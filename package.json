{
  "name": "adnosc",
  "description": "Adesso Advanced Node.js Schulung Resources",
  "version": "1.0.0",
  "repository": "https://github.com/kryz81/advanced-nodejs-schulung.git",
  "author": "Kryz <k@kryz.dev>",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint src",
    "prettier": "prettier -l src/**/*.{js,json}",
    "fix": "prettier --write src/**/*.{js,json}",
    "dev": "nodemon",
    "debug": "yarn dev --inspect=0.0.0.0:9229",
    "build": "babel src -d build",
    "prod": "node build",
    "test": "jest --watch",
    "test-once": "jest",
    "coverage": "jest --collectCoverageFrom=src/**/*.js --coverage src",
    "test-all": "lerna run test-once"
  },
  "devDependencies": {
    "@babel/cli": "7.5.5",
    "@babel/core": "7.5.5",
    "@babel/node": "7.5.5",
    "@babel/preset-env": "7.5.5",
    "eslint": "6.1.0",
    "eslint-config-airbnb-base": "13.2.0",
    "eslint-config-prettier": "6.0.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jest": "22.15.0",
    "eslint-plugin-node": "9.1.0",
    "eslint-plugin-prettier": "3.1.0",
    "eslint-plugin-security": "1.4.0",
    "jest": "24.8.0",
    "lerna": "3.16.4",
    "nodemon": "1.19.1",
    "prettier": "1.18.2",
    "supertest": "4.0.2"
  },
  "dependencies": {
    "dotenv": "8.0.0"
  }
}
